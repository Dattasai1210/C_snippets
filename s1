#include<stdio.h>
int main()
{
    int a=3;
    int b=++a+a+++--a;
    printf("value of b:%d",b);
}

#include<stdio.h>
int main()
{
  int a=3;
  int b=++a;
  printf("value of b is %d\n",b);
  b=a++;
  printf("value of b is %d\n",b);
  b=b+a;
  printf("value of b is %d\n",b);
  b=b+--a;
  printf("value of b is %d\n",b);
}

OUtput:13
